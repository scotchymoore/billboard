<h1>Songs </h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist.name %></td>
        <td><%= link_to 'Show', artist_song_path(@artist, song) %></td>
        <td><%= link_to 'Edit', edit_artist_song_path(@artist, song) %></td>
        <td><%= link_to 'Delete', artist_song_path(@artist, song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_artist_song_path(@artist) %>
<%= link_to 'Back to artist', artists_path(@artist) %>
