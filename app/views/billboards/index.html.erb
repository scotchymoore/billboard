<h1>Billboards</h1>
<% if @billboards.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Number Of Songs</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @billboards.each do |billboard| %>
        <tr>
          <td><%= link_to billboard.name, billboard_path(billboard) %></td>
          <td><%= billboard.songs.count %></td>
          <td><%= link_to 'Edit', edit_billboard_path(billboard) %></td>
          <td><%= link_to 'Destroy', billboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No Billboards Found, Please Create One!</h3>
<% end %>

<br>
<%= link_to 'All Artists', artists_path, class: 'btn' %>
<%= link_to 'New Billboard', new_billboard_path, class: 'btn blue' %>
